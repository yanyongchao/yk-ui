{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "allowJs": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "paths": {}
  },
  // 包含文件
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "example/**/*.ts",
    "example/**/*.tsx",
    "example/**/*.vue",
    "typings"
  ],
  // 排除文件
  "exclude": [
    "node_modules"
  ]
}
